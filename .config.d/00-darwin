# vim: set syntax=sh:

platform=$(uname)
if [[ $platform == 'Darwin' ]]; then
    # Update via Homebrew
    alias update="brew update"
    alias upgrade="brew upgrade"

    # Bash completion
    [[ -f "$(brew --prefix)/etc/bash_completion" ]] && . "$(brew --prefix)/etc/bash_completion"

    # If there's z, load it!
    # z > j!
    [[ -f "$(brew --prefix)/etc/profile.d/z.sh" ]] && . "$(brew --prefix)/etc/profile.d/z.sh"

    # Clears terminal logs for faster shell startup
    alias rmlogs="sudo rm -rf /private/var/log/asl/*.asl"

    # Make meep.
    alias meep="afplay ~/.dotfiles/meep.mp3"

    # Flush DNS on Mac OSX
    alias flush="dscacheutil -flushcache && sudo killall -HUP mDNSResponder"

    # Lock the screen (when going AFK)
    alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

    # Return battery percentage or charging icon.
    alias battery="/Users/colbyolson/src/scripts/battery.sh"

    # Security stuffs
    alias shred="srm"
    alias truecrypt='/Applications/TrueCrypt.app/Contents/MacOS/Truecrypt --text'

    alias vlc="/Applications/VLC.app/Contents/MacOS/VLC"

    alias music="mkdir -p /tmp/music; sshfs colby@colbyolson.com:files/ -p 1214 /tmp/music/"
    alias date=gdate
fi
