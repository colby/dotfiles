# vim: set syntax=sh:

# Chef defaults
OPSCODE_USER=chef-server-username
ORGNAME=chef

COOKBOOK_COPYRIGHT='Colby Olson'
COOKBOOK_EMAIL='colbyo@copiousinc.com'

export OPSCODE_USER ORGNAME COOKBOOK_COPYRIGHT COOKBOOK_EMAIL

function knife_reset {
  OPSCODE_USER=chef-server-username
  ORGNAME=chef
  export OPSCODE_USER ORGNAME
}

function spokane {
  OPSCODE_USER=colby
  ORGNAME=spokane
  export OPSCODE_USER ORGNAME
  knife "$@"
}

function dallas {
  OPSCODE_USER=colby
  ORGNAME=dallas
  export OPSCODE_USER ORGNAME
  knife "$@"
}

function rejuvenation {
  OPSCODE_USER=colby
  ORGNAME=rejuvenation
  export OPSCODE_USER ORGNAME
  knife "$@"
}
